#!/bin/bash
# Blue-Green Deployment Automation Script

set -e

echo "ğŸš€ Deploying Blue and Green versions..."
kubectl apply -f blue_deployment.yaml
kubectl apply -f green_deployment.yaml
kubectl apply -f kubeservice.yaml

echo "â³ Waiting for pods to be ready..."
kubectl wait --for=condition=available --timeout=120s deployment/messaging-web-blue || echo "âš ï¸ Blue deployment not ready in time."
kubectl wait --for=condition=available --timeout=120s deployment/messaging-web-green || echo "âš ï¸ Green deployment not ready in time."

echo "ğŸ“‹ Current pod status:"
kubectl get pods -l app=messaging-web -o wide

echo "ğŸ“œ Logs for Green Deployment:"
GREEN_POD=$(kubectl get pods -l app=messaging-web,version=green -o jsonpath="{.items[0].metadata.name}")
kubectl logs $GREEN_POD --tail=20 || echo "âš ï¸ Could not fetch logs for Green pod yet."

echo "ğŸ” Switching traffic to GREEN version..."
kubectl patch service messaging-web-service -p '{"spec":{"selector":{"app":"messaging-web","version":"green"}}}'

echo "âœ… Traffic successfully switched to GREEN version!"
kubectl get service messaging-web-service -o wide

echo "ğŸ‰ Blue-Green deployment completed successfully."
