#!/bin/bash
# Script to set up and verify a local Kubernetes cluster using Minikube

set -e

echo "🚀 Starting Minikube cluster using Docker driver..."
minikube start --driver=docker

echo "✅ Verifying Kubernetes cluster info..."
kubectl cluster-info

echo "📦 Listing available pods (if any)..."
kubectl get pods -A

echo "🎉 Kubernetes cluster is up and running successfully!"