echo "âœ… Checking current pods:"
kubectl get pods -o wide

echo "ğŸŒ Testing app availability during rollout..."
for i in {1..10}
do
  curl -s http://localhost:8000 > /dev/null
  if [ $? -eq 0 ]; then
    echo "Request $i: âœ… App reachable"
  else
    echo "Request $i: âŒ App unreachable"
  fi
  sleep 2
done

echo "âœ… Rolling update completed!"
